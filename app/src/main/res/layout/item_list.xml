<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dim_10dp">

    <ImageView
        android:id="@+id/ivDataIcon"
        android:layout_width="@dimen/dim_0dp"
        android:layout_height="@dimen/dim_0dp"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintWidth_percent="0.15"
        tools:ignore="ContentDescription,MissingConstraints"/>

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="@dimen/dim_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dim_10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/dim_15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivDataIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivDataIcon"
        app:layout_constraintTop_toTopOf="@+id/ivDataIcon" />
</androidx.constraintlayout.widget.ConstraintLayout>